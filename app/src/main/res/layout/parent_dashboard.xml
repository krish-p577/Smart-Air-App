<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/myText"
        style="@style/DashboardText"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/text_box"
        android:text="@string/todays_zone"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r6_test" />

    <!-- Firestore TextView -->

    <!-- Dropdown menu -->

    <TextView
        android:id="@+id/myText4"
        style="@style/DashboardText"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_box"
        android:text="@string/weekly_rescue_count"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myText3" />

    <TextView
        android:id="@+id/myText3"
        style="@style/DashboardText"
        android:layout_width="350dp"
        android:layout_height="71dp"
        android:layout_margin="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_box"
        android:text="@string/last_rescue_time"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myText" />

    <TextView
        android:id="@+id/myText5"
        style="@style/DashboardText"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/notifbox"
        android:text="@string/notification_alerts"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myText3" />

    <TextView
        android:id="@+id/r6_test"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/text_box"
        android:padding="12dp"
        android:text="@string/select_child"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toTopOf="@+id/myText"
        app:layout_constraintStart_toEndOf="@+id/r6_test"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <Button
        android:id="@+id/btn_generate_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/generate_pdf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/radio_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="72dp"
        android:text="@string/schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/history_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="72dp"
        android:text="History"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/radio_buttons" />

    <Button
        android:id="@+id/checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="268dp"
        android:layout_marginBottom="8dp"

        android:text="Check Ins"
        app:layout_constraintBottom_toTopOf="@+id/pdf2"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/SetPBButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="8dp"
        android:text="set PB"
        app:layout_constraintBottom_toTopOf="@+id/radio_buttons"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/pdf2"
        style="@style/DashboardText"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"

        android:layout_marginBottom="16dp"
        android:text="6 Months"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pdf1" />

    <RadioButton
        android:id="@+id/pdf1"
        style="@style/DashboardText"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="16dp"
        android:text="3 Months"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_generate_report" />

    <Button
        android:id="@+id/startActionPlan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="8dp"
        android:text="Action Plan"
        app:layout_constraintBottom_toTopOf="@+id/history_btn"
        app:layout_constraintStart_toEndOf="@+id/SetPBButtons" />


</androidx.constraintlayout.widget.ConstraintLayout>