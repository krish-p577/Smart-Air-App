<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ToolbarTheme"
        app:title="@string/parent_dashboard"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Dropdown Label -->
    <TextView
        android:id="@+id/r6_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:text="@string/select_child"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <!-- Spinner -->
    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/r6_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/r6_test"
        app:layout_constraintTop_toTopOf="@+id/r6_test" />

    <!-- Dashboard TextViews -->
    <TextView
        android:id="@+id/myText"
        style="@style/DashboardText"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:background="@drawable/text_box"
        android:text="@string/todays_zone"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mySpinner" />

    <TextView
        android:id="@+id/myText3"
        style="@style/DashboardText"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:layout_margin="16dp"
        android:background="@drawable/text_box"
        android:text="@string/last_rescue_time"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myText" />

    <TextView
        android:id="@+id/myText4"
        style="@style/DashboardText"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:background="@drawable/text_box"
        android:text="@string/weekly_rescue_count"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myText3" />

    <TextView
        android:id="@+id/myText5"
        style="@style/DashboardText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:background="@drawable/notifbox"
        android:text="@string/notification_alerts"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myText4" />

    <!-- Grid Layout for main buttons -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="2"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/checkin"
            style="@style/DashboardButton"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/check_ins" />

        <Button
            android:id="@+id/btn_generate_report"
            style="@style/DashboardButton"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/generate_pdf" />

        <Button
            android:id="@+id/radio_buttons"
            style="@style/DashboardButton"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/schedule" />

        <Button
            android:id="@+id/history_btn"
            style="@style/DashboardButton"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/history" />

    </GridLayout>

    <!-- Optional additional buttons from second file -->
    <Button
        android:id="@+id/SetPBButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set PB"
        app:layout_constraintBottom_toTopOf="@+id/radio_buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkin"
        app:layout_constraintTop_toTopOf="@+id/myText5"
        tools:ignore="NotSibling" />

    <RadioButton
        android:id="@+id/pdf1"
        style="@style/DashboardText"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="16dp"
        android:text="3 Months"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_generate_report"
        tools:ignore="NotSibling" />

    <RadioButton
        android:id="@+id/pdf2"
        style="@style/DashboardText"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="16dp"
        android:text="6 Months"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pdf1" />

</androidx.constraintlayout.widget.ConstraintLayout>
